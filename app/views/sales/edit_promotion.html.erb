<!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu", :active_item => "sales"%>
<section class="content-header">
    <h1>
        Promociones de Longbourn
        <small>Listado de Promociones</small>
    </h1>
    <ol class="breadcrumb">
        <li class="active">Promociones</li>
    </ol>
</section>

<section class="content">
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<div class="box box-primary">
				<div class="box-header">
					<h3 class="box-title">Nueva Promocion</h3>
				</div>
				<%=form_for :promotion, :url => {:controller => :sales, :action  => :update_promotion} do |f|%>
				<%=f.hidden_field :id, :value => @promotion.id%>
				<div class="box-body">
					<div class="row">
						<div class="col-xs-12">
							<div class="form-group">
								<label>Nombre Completo</label>
								<%=f.text_field :fullname, :value => @promotion.fullname, :class => "form-control"%>
							</div>
						</div>
						<div class="col-xs-12">
							<div class="form-group">
								<label>Descripción</label>
								<%=f.text_field :description, :value => @promotion.description, :class => "form-control"%>
							</div>
						</div>
						<div class="col-xs-6">
							<div class="form-group">
								<label>Nombre Corto</label>
								<%=f.text_field :shortname, :value => @promotion.shortname, :class => "form-control"%>
							</div>
						</div>
						<div class="col-xs-6">
							<div class="form-group">
								<label>Descuento Asociado</label>
								<%=f.select :discount_index, options_for_select((0..25).step(5).collect{|d| ["#{d}%",d]}, @promotion.discount_index), {},{:class => "form-control"}%>
							</div>
						</div>
						<div class="col-xs-6">
							<div class="form-group">
								<label>Fecha de Inicio</label>
								<%=f.date_field :start_date, :value => @promotion.start_date, :class => "form-control"%>
							</div>
						</div>
						<div class="col-xs-6">
							<div class="form-group">
								<label>Fecha de Término</label>
								<%=f.date_field :end_date, :value => @promotion.end_date, :class => "form-control"%>
							</div>
						</div>
					</div>
				</div>
				<div class="box-footer clearfix">
					<div class="pull-right">
						<%=f.submit "Editar Promocion", :class => "btn btn-primary"%>
					</div>
				</div>
				<%end%>
			</div>
		</div>
	</div>
</section>