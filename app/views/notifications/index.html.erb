<!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu"%>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Notificaciones de <%=@user.firstname+" "+@user.lastname%></h1>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <%= render :partial => "notification_visualizer"%>
            </div>
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Listado de Notificaciones
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <%= render :partial => "notifications_table"%>
                        </div>
                        <div class="pagination-block">
                            <%= paginate @notifications %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
