<!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu"%>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Notificaciones de <%=@user.firstname+" "+@user.lastname%></h1>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <%= render :partial => "notification_visualizer"%>
            </div>
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Listado de Notificaciones
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="notification-list">
                                <thead>
                                    <tr>
                                        <th>Subject</th>
                                        <th>Fecha</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%@notifications.each do |note|%>
                                        <tr>
                                            <td><%=link_to note.subject, {:controller => "notifications", :action => "read_notification", :params => {:id => note.id, :notification => {:seen => 1}}}, :remote => true%></td>
                                            <td><%=note.created_at.strftime("%d-%m-%Y")%></td>
                                            <%if note.seen == 0%>
                                                <td>No Leido</td>
                                            <%else%>
                                                <td>Leido</td>
                                            <%end%>
                                        </tr>
                                    <%end%>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
$(document).ready(function() {
    $('#notification-list').dataTable();
});
</script>