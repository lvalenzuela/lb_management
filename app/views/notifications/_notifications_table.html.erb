<table class="table table-striped table-bordered table-hover" id="notifications-table">
    <thead>
        <tr>
            <th>Subject</th>
            <th>Fecha</th>
            <th style="text-align: center;">Estado</th>
        </tr>
    </thead>
    <tbody>
        <%@notifications.each do |note|%>
            <tr>
                <td><%=link_to note.subject, {:controller => "notifications", :action => "read", :params => {:id => note.id, :notification => {:seen => 1}}}, :remote => true%></td>
                <td><%=note.created_at.strftime("%d-%m-%Y")%></td>
                <%if note.seen == 0%>
                    <td style="text-align: center;"><i class="fa fa-warning"></i></td>
                <%else%>
                    <td style="text-align: center;"><i class="fa fa-check"></i></td>
                <%end%>
            </tr>
        <%end%>
    </tbody>
</table>