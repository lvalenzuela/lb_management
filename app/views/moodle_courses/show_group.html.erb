  <!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu", :active_item => "admin"%>

<section class="content-header no-margin">
    <h1>
        Grupos de Cursos Longbourn
        <small><%=@group.groupname%></small>
    </h1>
    <ol class="breadcrumb">
        <li><%=link_to "Cursos de Longbourn", :controller => :moodle_courses, :action => :index%></li>
        <li>Grupos de Cursos</li>
        <li class="active"><%=@group.groupname%></li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-6">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Grupo: <%=@group.groupname%></h3>
                </div>
                <div class="box-body">
                    <table class="table">
                        <thead>
                            <th>ID</th>
                            <th>Nombre Curso</th>
                            <th style="text-align: center; width: 100px;">Eliminar</th>
                        </thead>
                        <tbody>
                            <%@courses.each do |course|%>
                            <tr>
                                <td><%=course.moodleid%></td>
                                <td><%=course.coursename%></td>
                                <td style="text-align: center;"><%=link_to "<i class='fa fa-times'></i>".html_safe, {:controller => "moodle_courses", :action => "destroy_assignation", :params => {:courseid => course.moodleid, :groupid => @group.id}}, {:class => "btn btn-circle btn-default btn-danger", :method => :delete, :data => {:confirm => "Estas Seguro?"}}%></td>
                            </tr>
                            <%end%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-xs-6">
            <div class="box box-warning">
                <div class="box-header">
                    <h3 class="box-title">Cursos de Moodle</h3>
                </div>
                <div class="box-body">
                    <table class="table">
                        <thead>
                            <th style="text-align: center; width: 100px;">Agregar</th>
                            <th>Nombre Curso</th>
                        </thead>
                        <tbody>
                            <%@remaining_courses.each do |r|%>
                            <tr>
                                <td style="text-align: center;"><%=link_to "<i class='fa fa-chevron-left'></i><i class='fa fa-chevron-left'></i>".html_safe, {:controller => "moodle_courses", :action => "assign_course", :params => {:groupid => @group.id, :courseid => r.moodleid}}, {:method => :post}%></td>
                                <td><%=r.coursename%></td>
                            </tr>
                            <%end%>
                        </tbody>
                    </table>
                </div>
                <div class="box-footer clearfix">
                    <div class="pull-right">
                        <%=paginate @remaining_courses%>
                    </div>
                </div><!-- box-footer -->
            </div>
        </div>
    </div>
</section>