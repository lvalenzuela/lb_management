  <!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu", :active_item => "admin"%>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Cursos de Longbourn</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Creación de Grupos
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="courses-table">
                            <thead>
                                <th>ID</th>
                                <th>Nombre Curso</th>
                                <th></th>
                            </thead>
                            <tbody>
                                <%@courses.each do |course|%>
                                <tr>
                                    <td><%=course.moodleid%></td>
                                    <td><%=course.coursename%></td>
                                    <td style="text-align: center;"><%=link_to "<i class='fa fa-times'></i>".html_safe, {:controller => "moodle_courses", :action => "destroy_assignation", :params => {:courseid => course.moodleid, :groupid => @group}}, {:class => "btn btn-circle btn-default btn-danger", :method => :delete, :data => {:confirm => "Estas Seguro?"}}%></td>
                                </tr>
                                <%end%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Creación de Grupos
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="remaining-courses-table">
                            <thead>
                                <th>Agregar</th>
                                <th>Nombre Curso</th>
                            </thead>
                            <tbody>
                                <%@remaining_courses.each do |r|%>
                                <tr>
                                    <td style="text-align: center;"><%=link_to "<i class='fa fa-chevron-left'></i><i class='fa fa-chevron-left'></i>".html_safe, {:controller => "moodle_courses", :action => "assign_course", :params => {:groupid => @group, :courseid => r.moodleid}}, {:method => :post}%></td>
                                    <td><%=r.coursename%></td>
                                </tr>
                                <%end%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
$(document).ready(function() {
    $('#remaining-courses-table').dataTable();
});
</script>