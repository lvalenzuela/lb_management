 
 <!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu", :active_item => "clients"%>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Cuentas de Clientes</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Listado de Cuentas de Clientes
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="accounts-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nombre Cuenta</th>
                                    <th>Descripcion</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%@accounts.each do |acc|%>
                                <tr>
                                    <td><%=acc.id%></td>
                                    <td><%=link_to acc.accountname, :controller => "clients", :action => "index", :params => {:accountid => acc.id}%></td>
                                    <td><%=acc.type%></td>
                                </tr>
                                <%end%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <%if !@selected.blank?%>
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel panel-heading">
                    Clientes Asignados: <%=@selected.accountname%>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="clients-table">
                            <thead>
                                <tr>
                                    <th>Nombre Contacto</th>
                                    <th>Organizacion</th>
                                    <th>Cotizar</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%@clients.each do |c|%>
                                <tr>
                                    <td><%=c.firstname+" "+c.lastname%></td>
                                    <td><%=c.institution%></td>
                                    <td style="text-align: center"><%=link_to "<i class='fa fa-file-o'></i>".html_safe%></td>
                                </tr>
                                <%end%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <%else%>
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel panel-heading">
                    Seleccione una Cuenta
                </div>
                <div class="panel-body">
                    <h3>Seleccione una Cuenta</h3>
                    <p>Seleccione la cuenta que desea revisar para ver a sus clientes</p>
                </div>
            </div>
        </div>
        <%end%>
    </div>
</div>
<script>
$(document).ready(function() {
    $('#accounts-table').dataTable();
});
</script>
<script>
$(document).ready(function() {
    $('#clients-table').dataTable();
});
</script>