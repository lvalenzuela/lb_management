 
 <!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu", :active_item => "clients"%>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Cuentas de Clientes</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Listado de Cuentas de Clientes
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="accounts-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nombre Cuenta</th>
                                    <th>Descripcion</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%@accounts.each do |acc|%>
                                <tr>
                                    <td><%=acc.id%></td>
                                    <td><%=acc.accountname%></td>
                                    <td><%=acc.type%></td>
                                </tr>
                                <%end%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>