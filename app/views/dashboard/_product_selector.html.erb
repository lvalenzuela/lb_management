<div id="product_options">
	<%if products%>
		<%=select_tag "course_details[zoho_product_id]", options_for_select(products.collect{|t| [t.product_name,t.zoho_product_id]}, selected), {:class => "form-control", :include_blank => true}%>
	<%else%>
		<%=select_tag "course_details[zoho_product_id]", options_for_select([nil]), {:class => "form-control", :prompt => "Selecciona una Modalidad"}%>
	<%end%>
</div>