<!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu", :active_item => "dashboard"%>

<section class="content-header">
    <h1>
        Dashboard	
       	<small>Configuración</small>
    </h1>
    <ol class="breadcrumb">
    	<li>Dashboard</li>
        <li class="active">Configuración</li>
    </ol>
</section>

<section class="content">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<div class="box box-info">
				<div class="box-header">
					<h3 class="box-title">Configuración General</h3>
				</div>
				<%=form_tag :controller => :dashboard, :action => :update_alarm_parameters do%>
				<div class="box-body">
					<div class="row">
						<div class="form-group col-xs-4 col-xs-offset-2">
							<label>Nota Mínima de Aprobación</label>
						</div>
						<div class="form-group col-xs-3">
							<%=select_tag :min_grade, options_for_select((1.0..7.0).step(0.1).map{|g| ["#{g.round(1)}", g.to_s]}, @min_grade), {:class => "form-control"}%>
						</div>
					</div>
					<div class="row">
						<div class="form-group col-xs-4 col-xs-offset-2">
							<label>Porcentaje Mínimo de Asistencia</label>
						</div>
						<div class="form-group col-xs-3">
							<%=select_tag :min_attendance, options_for_select((50..100).step(5).map{|pct| ["#{pct}%", pct]},@min_attendance.to_i), {:class => "form-control"}%>
						</div>
					</div>
					<div class="row">
						<div class="form-group col-xs-4 col-xs-offset-2">
							<label>Sesiones de Atraso Aceptables</label>
						</div>
						<div class="form-group col-xs-3">
							<%=select_tag :max_attendance_delay, options_for_select((1..15).step(1).map{|att| ["#{att}", att]},@max_attendance_delay.to_i), {:class => "form-control"}%>
						</div>
					</div>
					<div class="row">
						<div class="form-group col-xs-4 col-xs-offset-2">
							<label>Páginas de Desfase con el Plan</label>
						</div>
						<div class="form-group col-xs-3">
							<%=number_field_tag :max_page_offset, @max_page_offset, :class => "form-control"%>
						</div>
					</div>
				</div>
				<div class="box-footer clearfix">
					<div class="col-xs-10 col-xs-offset-1">
						<div class="pull-right">
							<%=submit_tag "Guardar", :class => "btn btn-lg btn-primary"%>
						</div>
					</div>
				</div>
				<%end%>
			</div>
		</div>
	</div>
</section>