<!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu", :active_item => "courses"%>
<section class="content-header">
    <h1>
        <%=@course.coursename%>
        <small>Asignacion de Profesores</small>
    </h1>
    <ol class="breadcrumb">
        <li>Cursos de Longbourn</li>
        <li>Nuevo Curso</li>
        <li class="active">Asignación de Profesor</li>
    </ol>
</section>

<section class="content">
    <div class="col-xs-12">
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li>
                    <%=link_to "Datos Generales", :action => :edit, :params => {:id => @course.id}%>
                </li>
                <li class="active">
                    <a href="javascript:;">Asignación de Profesor</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active">
                    <section>
                        <div class="row">
                            <div class="col-xs-8">
                                <div class="box box-info">
                                    <div class="box-body">
                                        <div id="calendar"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-4">
                                <div class="box box-primary">
                                    <div class="box-header">
                                        <h3 class="box-title">Profesores Disponibles</h3>
                                    </div>
                                    <div class="box-body">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>Nombre</th>
                                                    <th>Dia 1</th>
                                                    <th>Dia 2</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            <%@teachers.each do |t|%>
                                                <tr>
                                                    <td><%=t.name%></td>
                                                    <td></td>
                                                    <td></td>
                                                </tr>
                                            <%end%>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>