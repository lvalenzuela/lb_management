<%=form_for @new_student, :url => {:action => :create_student} do |f|%>
<%=hidden_field_tag :courseid, courseid%>
<div class="box box-primary">
	<div class="box-header">
		<h3 class="box-title">Registrar nuevo Alumno</h3>
	</div>
	<div class="box-body">
        <%if @new_student.errors.any?%>
        <div class="alert alert-warning alert-dismissable">
            <i class="fa fa-warning"></i>
            <%=pluralize(@new_student.errors.count,"errores")%> no permitieron llevar a cabo la operacion 
            <ul>
                <%@new_student.errors.full_messages.each do |msg|%>
                    <li><%= msg %></li>
                <%end%>
            </ul>
        </div>
        <%end%>
		<div class="form-group">
			<label>Nombres</label>
			<%=f.text_field :firstname, :class => "form-control"%>
		</div>
		<div class="form-group">
			<label>Apellidos</label>
			<%=f.text_field :lastname, :class => "form-control"%>
		</div>
		<div class="form-group">
			<label>Rut</label>
			<%=f.text_field :rut, :class => "form-control"%>
		</div>
		<div class="form-group">
			<label>E-Mail</label>
			<%=f.email_field :email, :class => "form-control"%>
		</div>
		<div class="form-group">
			<label>Empresa</label>
			<%=f.text_field :institution, :class => "form-control"%>
		</div>
		<div class="form-group">
			<label>Departamento</label>
			<%=f.text_field :department, :class => "form-control"%>
		</div>
		<div class="form-group">
			<label>Telefono</label>
			<%=f.phone_field :phone, :class => "form-control"%>
		</div>
		<div class="form-group">
			<label>GÃ©nero</label><br>
			<div class="row">
				<div class="col-xs-6 col-xs-offset-1">
					<%=f.radio_button :gender, "male"%> Masculino
				</div>
			</div>
			<div class="row">
				<div class="col-xs-6 col-xs-offset-1" style="margin-top: 5px;">
					<%=f.radio_button :gender, "female"%> Femenino
				</div>
			</div>
		</div>
	</div>
	<div class="box-footer clearfix">
		<div class="col-xs-7">
			<div class="checkbox">
				<label>
					<%=check_box_tag :enrol, true, true%>
					Crear y Asociar al Curso
				</label>
			</div>	
		</div>
		<div class="pull-right">
			<%=f.submit "Crear y Registrar", :class => "btn btn-primary"%>
		</div>
	</div>
</div>
<%end%>