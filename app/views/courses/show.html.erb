<!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu", :active_item => "courses"%>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Detalles de Cursos Longbourn</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-9">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Información General
                </div>
                <div class="panel-body">
                    <div class="col-lg-4">
                        <h3>Teacher</h3>
                        <div class="thumbnail">
                            <%=image_tag "default_profile_pic.jpg"%>
                            <div class="caption">
                                <h3><%=get_user_name(@course.teacher_user_id)%></h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <h3><%=@course.coursename%></h3>
                        <table class="table">
                            <tr>
                                <td><b>Descripción</b></td>
                                <td><%=@course.description%></td>
                            </tr>
                            <tr>
                                <td><b>Nivel del Curso</b></td>
                                <td><%=get_course_level(@course.course_level_id)%></td>
                            </tr>
                            <tr>
                                <td><b>Modalidad</b></td>
                                <td><%=@course.mode%></td>
                            </tr>
                            <tr>
                                <td><b>Tipo de Curso</b></td>
                                <td><%=get_course_type(@course.course_type_id)%></td>
                            </tr>
                            <tr>
                                <td><b>Estado del Curso</b></td>
                                <td><%=get_course_status(@course.course_status_id)%></td>
                            </tr>
                            <tr>
                                <td><b>Fecha de Inicio</b></td>
                                <td><%=@course.start_date.strftime("%d-%m-%Y")%></td>
                            </tr>
                            <tr>
                                <td><b>Ubicación</b></td>
                                <td><%=@course.location%></td>
                            </tr>
                            <tr>
                                <td><b>Curso Moodle Asociado</b></td>
                                <td><%=@course.moodleid%></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Horario de Clases
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Día</th>
                                <th>Hora</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><%=get_course_feature(@course_features,"first_day")%></td>
                                <td><%=get_course_feature(@course_features,"first_day_hour")%></td>
                            </tr>
                            <tr>
                                <td><%=get_course_feature(@course_features,"second_day")%></td>
                                <td><%=get_course_feature(@course_features,"second_day_hour")%></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-9">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Listado de Alumnos
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered" id="students-table">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Correo</th>
                                <th>Género</th>
                                <th>Telefono</th>
                                <th>Habilitado en Moodle</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%@students.each do |s|%>
                            <tr>
                                <td><%=s.firstname+" "+s.lastname%></td>
                                <td><%=s.email%></td>
                                <td><%=s.gender%></td>
                                <td><%=s.phone%></td>
                                <td><%=s.moodle_enabled ? "true" : "false"%></td>
                            </tr>
                            <%end%>
                        </tbody>
                    </table>
                    <div class="pull-right">
                        <%=link_to "Crear Usuarios en Moodle", {}, {:class => "btn btn-default"}%>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    $('#students-table').dataTable();
});
</script>