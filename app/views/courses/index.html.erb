<!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu", :active_item => "courses"%>

<section class="content-header">
    <h1>
        Cursos de Longbourn
        <small>Listado de Cursos</small>
    </h1>
    <ol class="breadcrumb">
        <li>Cursos de Longbourn</li>
        <li class="active">Listado de Cursos</li>
    </ol>
</section>

<section class="content">
    <div class="col-xs-12">
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="<%=activate_menu_item("ongoing",@active)%>">
                    <%=link_to "Cursos en Desarrollo", {:controller => :courses, :action => :index, :params => {:opt => "ongoing"}}%>
                </li>
                <li class="<%=activate_menu_item("staged",@active)%>">
                    <%=link_to "Cursos en Venta", {:controller => :courses, :action => :index, :params => {:opt => "staged"}}%>
                </li>
                <li class="<%=activate_menu_item("canceled",@active)%>">
                    <%=link_to "Cursos Cancelados", {:controller => :courses, :action => :index, :params => {:opt => "canceled"}}%>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active">
                    <section>
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="box box-primary">
                                    <div class="box-header">
                                        <h3 class="box-title">Listado de Cursos</h3>
                                    </div>
                                    <div class="box-body table-responsive">
                                        <table class="table table-striped table-bordered" id="courses-table">
                                            <thead>
                                                <tr>
                                                    <th>Nombre Curso</th>
                                                    <th style="width: 120px;">Modalidad</th>
                                                    <th style="width: 80px;">Tipo</th>
                                                    <th style="width: 80px;">Alumnos</th>
                                                    <th style="width: 120px;">Fecha Inicio</th>
                                                    <th style="width: 60px; text-align: center;">Ver</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <%@courses.each do |c|%>
                                                <tr>
                                                    <td><%=c.coursename%></td>
                                                    <td><%=get_course_mode_label(c.mode)%></td>
                                                    <td><%=get_course_type(c.course_type_id)%></td>
                                                    <td><%=c.current_students_qty%> de <%=c.students_qty%></td>
                                                    <td><%=c.start_date ? c.start_date.strftime("%d-%m-%Y") : "-"%></td>
                                                    <td style="text-align: center;">
                                                        <%=link_to "<i class='fa fa-eye fa-large'></i>".html_safe, {:controller => "courses", :action => "show", :params => {:id => c.id}}, {:class => "btn btn-default"}%>
                                                    </td>
                                                </tr>
                                                <%end%>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="box-footer clearfix">
                                        <div class="pull-right">
                                        </div>
                                    </div><!-- box-footer -->
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript">
    $(document).on('page:change', function () {
        $("#courses-table").dataTable();
    });
</script>