<!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu", :active_item => "courses"%>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Cursos de Longbourn</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 form-group">
            <ul class="nav nav-tabs nav-justified" role="tablist">
                <li <%=activate_menu_item("ongoing",@active)%>>
                    <%=link_to "Cursos en Desarrollo", {:controller => "courses", :action => "index", :params => {:opt => "ongoing"}}%>
                </li>
                <li <%=activate_menu_item("staged",@active)%>>
                    <%=link_to "Cursos en Venta", {:controller => "courses", :action => "index", :params => {:opt => "staged"}}%>
                </li>
                <li <%=activate_menu_item("sold",@active)%>>
                    <%=link_to "Cursos por Publicar", {:controller => "courses", :action => "index", :params => {:opt => "sold"}}%>
                </li>
                <li <%=activate_menu_item("canceled",@active)%>>
                    <%=link_to "Cursos Cancelados", {:controller => "courses", :action => "index", :params => {:opt => "canceled"}}%>
                </li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Cursos en Venta
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered" id="courses-table">
                        <thead>
                            <tr>
                                <th>Nombre Curso</th>
                                <th>Modalidad</th>
                                <th>Tipo</th>
                                <th># Alumnos</th>
                                <th>Nivel</th>
                                <th>Estado</th>
                                <th>Fecha Inicio</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%@courses.each do |c|%>
                            <tr>
                                <td><%=link_to c.coursename, {:controller => "courses", :action => "show", :params => {:id => c.id}}%></td>
                                <td><%=c.mode%></td>
                                <td><%=get_course_type(c.course_type_id)%></td>
                                <td><%=c.students_qty%></td>
                                <td><%=get_course_level(c.course_level_id)%></td>
                                <td><%=get_course_status(c.course_status_id)%></td>
                                <%if c.start_date%>
                                    <td><%=c.start_date.strftime("%d-%m-%Y")%></td>
                                <%else%>
                                    <td> - </td>
                                <%end%>
                                <td><%=link_to "<i class='fa fa-pencil'></i>".html_safe ,{:controller => "courses", :action => "edit", :params => {:id => c.id}}, {:class => "btn btn-default btn-circle"}%> <%=link_to "<i class='fa fa-times'></i>".html_safe, {:controller => "courses", :action => "cancel_course", :params => {:id => c.id}}, {:class => "btn btn-default btn-circle btn-danger", method: :post,data: {confirm: "Estas seguro?"}}%></td>
                            </tr>
                            <%end%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    $('#courses-table').dataTable();
});
</script>