<!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu", :active_item => "courses"%>

<section class="content-header">
    <h1>
        Cursos de Longbourn
        <small>Listado de Cursos</small>
    </h1>
    <ol class="breadcrumb">
        <li>Cursos de Longbourn</li>
        <li class="active">Listado de Cursos</li>
    </ol>
</section>

<section class="content">
    <div class="col-xs-12">
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="<%=activate_menu_item("production",@active)%>">
                    <%=link_to "Cursos en Desarrollo", {:controller => :courses, :action => :index, :params => {:opt => "production"}}%>
                </li>
                <li class="<%=activate_menu_item("staged",@active)%>">
                    <%=link_to "Cursos en Venta", {:controller => :courses, :action => :index, :params => {:opt => "staged"}}%>
                </li>
                <li class="<%=activate_menu_item("canceled",@active)%>">
                    <%=link_to "Cursos Cancelados", {:controller => :courses, :action => :index, :params => {:opt => "canceled"}}%>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active">
                    <section>
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="box box-primary">
                                    <div class="box-header">
                                        <h3 class="box-title">Listado de Cursos</h3>
                                    </div>
                                    <div class="box-body table-responsive">
                                        <%@courses.each do |course|%>
                                            <div class="row">
                                                <div class="col-xs-10 col-xs-offset-1">
                                                    <div class="box box-success">
                                                        <div class="box-header">
                                                            <h3 class="box-title"><%=course.coursename%></h3>
                                                        </div>
                                                        <div class="box-body">
                                                            <div class="row">
                                                                <div class="col-xs-4">
                                                                    <label>Descripcion</label>
                                                                    <span class="block-description"><%=course.description%></span>
                                                                    <label>Modalidad</label>
                                                                    <span class="block-description"><%=course.mode%></span>
                                                                    <label>Ubicacion</label>
                                                                    <span class="block-description"><%=course.location%></span>
                                                                </div>
                                                                <div class="col-xs-4">
                                                                    <label>Cantidad de Alumnos</label>
                                                                    <span class="block-description"><%=course.current_students_qty%> de <%=course.students_qty%></span>
                                                                    <label>Nivel</label>
                                                                    <span class="block-description"><%=get_course_level(course.course_level_id)%></span>
                                                                    <label>Libro / Plantilla</label>
                                                                    <span class="block-description"><%=template_name(course.course_template_id)%></span>
                                                                </div>
                                                                <div class="col-xs-4">
                                                                    <label>Profesor Asignado</label>
                                                                    <span class="block-description"><%=user_name(course.main_teacher_id)%></span>
                                                                    <label>Fecha de Inicio</label>
                                                                    <span class="block-description"><%=l(course.start_date, :format => "%d de %B del %Y")%></span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="box-footer clearfix">
                                                            <div class="pull-right">
                                                                <%=render :partial => "summit_course_options", :locals => {:active => @active, :course => course}%>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        <%end%>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>
