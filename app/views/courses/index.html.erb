<!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu", :active_item => "courses"%>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Cursos de Longbourn</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 form-group">
            <ul class="nav nav-tabs nav-justified" role="tablist">
                <li>
                    <%=link_to "Cursos en Desarrollo"%>
                </li>
                <li class="active">
                    <%=link_to "Cursos en Venta"%>
                </li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Cursos en Venta
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered" id="courses-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nombre Curso</th>
                                <th>Modalidad</th>
                                <th>Tipo de Curso</th>
                                <th># Alumnos</th>
                                <th>Ubicacion</th>
                                <th>Fecha Inicio</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%@courses.each do |c|%>
                            <tr>
                                <td><%=c.id%></td>
                                <td><%=c.coursename%></td>
                                <td><%=c.mode%></td>
                                <td><%=get_course_type(c.course_type_id)%></td>
                                <td><%=c.students_qty%></td>
                                <td><%=c.location%></td>
                                <%if c.start_date%>
                                    <td><%=c.start_date.strftime("%d-%m-%Y")%></td>
                                <%else%>
                                    <td> - </td>
                                <%end%>
                            </tr>
                            <%end%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    $('#courses-table').dataTable();
});
</script>