<!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu", :active_item => "courses"%>

<section class="content-header">
    <h1>
        Cursos de Longbourn
        <small>Listado de Cursos</small>
    </h1>
    <ol class="breadcrumb">
        <li>Cursos de Longbourn</li>
        <li class="active">Listado de Cursos</li>
    </ol>
</section>

<section class="content">
    <div class="col-xs-12">
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="<%=activate_menu_item("hidden",@active)%>">
                    <%=link_to "Cursos Inactivos", {:controller => :courses, :action => :index, :params => {:opt => "hidden"}}%>
                </li>
                <li class="<%=activate_menu_item("active",@active)%>">
                    <%=link_to "Cursos en Venta", {:controller => :courses, :action => :index, :params => {:opt => "active"}}%>
                </li>
                <li class="<%=activate_menu_item("desarrollo",@active)%>">
                    <%=link_to "Cursos en Desarrollo", {:controller => :courses, :action => :index, :params => {:opt => "desarrollo"}}%>
                </li>
                <li class="<%=activate_menu_item("finished",@active)%>">
                    <%=link_to "Cursos Finalizados", {:controller => :courses, :action => :index, :params => {:opt => "finished"}}%>
                </li>
                <li class="<%=activate_menu_item("cancel",@active)%>">
                    <%=link_to "Cursos Cancelados", {:controller => :courses, :action => :index, :params => {:opt => "cancel"}}%>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active">
                    <section id="new">
                        <h4 class="page-header">Listado de Cursos</h4>
                        <div class="row">
                            <div class="col-xs-12">
                                <%if @courses.blank?%>
                                    <h4>No hay cursos para mostrar en esta secci√≥n</h4>
                                <%else%>
                                    <%@courses.each do |course|%>
                                        <%=render :partial => "summit_course_partial", :locals => {:course => course, :active => @active}%>
                                    <%end%>
                                <%end%>
                                <div class="clearfix">
                                    <div class="pull-right">
                                        <%=paginate @courses%>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>
