 
<!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu", :active_item => "requests"%>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Requerimientos Realizados por <%=@user.firstname+" "+@user.lastname%></h1>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <%=@frame_title%>
                        <div class="pull-right">
                            <div class="btn-group">
                                <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                    Ver
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu pull-right" role="menu">
                                    <li><%=link_to "Requerimientos en Proceso", :controller => "requests", :action => "sent_requests", :params => {:f => "inprogress"}%>
                                    </li>
                                    <li><%=link_to "Requerimientos en Espera de ConfirmaciÃ³n", :controller => "requests", :action => "sent_requests", :params => {:f => "wconf"}%>
                                    </li>
                                    <li><%=link_to "Requerimientos Resueltos/Cancelados", :controller => "requests", :action => "sent_requests", :params => {:f => "solved"}%>
                                    </li>
                                    <li><%=link_to "Requerimientos Sin Asignar", :controller => "requests", :action => "sent_requests", :params => {:f => "unassigned"}%>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <%=render :partial => "sent_requests_partial", :locals => {:requests => @requests, :table => @table, :editable => @editable}%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
$(document).ready(function() {
    $('#sent-requests-table').dataTable();
});
</script>