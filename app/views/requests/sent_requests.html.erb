 
<!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu"%>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Solicitudes Realizadas por <%=@user.firstname+" "+@user.lastname%></h1>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Solicitudes en Espera de Confirmaci√≥n
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <%=render :partial => "confirmation_request_table"%>
                        </div>
                    </div>
                    <div class="pagination-block">
                        <%= paginate @conf_requests%>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Listado de Solicitudes
                        <div class="pull-right">
                            <div class="btn-group">
                                <%=link_to "Nueva Solicitud", {:controller => "requests", :action => "new_request"}, :class => "btn btn-default btn-xs"%>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
						<div class="table-responsive">
							<%=render :partial => "requests_table"%>
						</div>
                        <div class="pagination-block">
                            <%= paginate @requests%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>