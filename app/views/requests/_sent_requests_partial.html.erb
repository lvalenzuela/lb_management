<%if table == 1%>
	<table class="table table-striped table-bordered table-hover" id="sent-requests-table">
	    <thead>
	        <tr>
	            <th style="text-align: center;">ID</th>
	            <th style="text-align: center;">Tema</th>
	            <th style="text-align: center;">Área de Destino</th>
	            <th style="text-align: center;">Estado</th>
	            <th style="text-align: center;">Asignada A</th>
	            <th style="text-align: center;">Fecha de Solicitud</th>
	            <th style="text-align: center;">Fecha Límite</th>
	            <%if editable%>
		            <th style="text-align: center;">Editar</th>
		            <th style="text-align: center;">Eliminar</th>
	            <%end%>
	        </tr>
	    </thead>
	    <tbody>
	        <%requests.each do |request|%>                                       
	            <tr>
	                <td style="text-align: center;"><%=request.id%></td>
	                <td><%=link_to truncate(request.subject), {:controller => "request_notes", :action => "show", :params => {:id => request.id}}%></td>
	                <td style="text-align: center;"><%=request_areaname(request.areaid)%></td>
	                <td style="text-align: center;"><span class="label label-<%=request_label_class(request.statusid)%>"><%=request_status_desc(request.statusid)%></span></td>
	                <td style="text-align: center;"><%=get_username(request.receiverid)%></td>
	                <td style="text-align: center;"><%=request.created_at.strftime("%d-%m-%Y")%></td>
	                <td style="text-align: center;"><%=show_date(request.duedate)%></td>
	                <%if editable%>
			            <td style="text-align: center;"><%=link_to (image_tag "edit_icon.png", :size => "30x30"), :controller => "requests", :action => "edit_request", :params => {:id => request.id}%></td>
			            <td style="text-align: center;"><%=link_to (image_tag "delete_icon.png", :size => "30x30"), {action: "destroy", id: request.id}, method: :delete, data: {confirm: "Estas seguro?"}%></td>
			        <%end%>
	            </tr>
	        <%end%>
	    </tbody>
	</table>
<%else%>
	<table class="table table-striped table-bordered table-hover" id="sent-requests-table">
	    <thead>
	        <tr>
	            <th style="text-align: center;"> ID</th>
	            <th>Tema</th>
	            <th style="text-align: center;">Estado</th>
	            <th style="text-align: center;">Ver Requerimiento</th>
	        </tr>
	    </thead>
	    <tbody>
	        <%requests.each do |request|%>
	            <tr>
	                <td style="text-align: center;"><%=request.id%></td>
	                <td><%=link_to truncate(request.subject), {:controller => "request_notes", :action => "show", :params => {:id => request.id}}%></td>
	                <td style="text-align: center;"><span class="label label-<%=request_label_class(request.statusid)%>"><%=request_status_desc(request.statusid)%></span></td>
	                <%if has_unseen_messages(request.last_msg_datetime,request.id,current_user.id)%>
	                	<td style="text-align: center;"><%=link_to "<i class='fa fa-exclamation rediconcolor fa-lg'></i>".html_safe, {:controller => "request_notes", :action => "show", :params => {:id => request.id}}, {:class => "btn btn-outline btn-info"}%></td>
	                <%else%>
	                	<td style="text-align: center;"><%=link_to "<i class='fa fa-list fa-lg'></i>".html_safe, {:controller => "request_notes", :action => "show", :params => {:id => request.id}}, {:class => "btn btn-outline btn-info"}%></td>
	                <%end%>
	            </tr>
	        <%end%>
	    </tbody>
	</table>
<%end%>