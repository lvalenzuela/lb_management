 <!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu", :active_item => "requests"%>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Selección de Área para Requerimientos</h1>
            
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Selección de Área
                </div>
                <div class="panel-body">
                    <%=form_tag new_request_requests_path, :method => :get do%>
                        <h3>Seleción de Área</h3>
                        <p>Por favor, seleccione el área a la cual desea realizar su solicitud.</p>
                        <div class="col-lg-6 col-lg-offset-3 form-group">
                            <%=select_tag :areaid, options_for_select(@areas.collect{|a| [a.areaname, a.id]}), :class => "form-control"%>
                        </div>
                        <div class="col-lg-6 col-lg-offset-3 form-group">
                            <%=submit_tag "Confirmar", :class => "btn btn-lg btn-block btn-default"%>
                        </div>
                    <%end%>
                </div>
            </div>
        </div>
    </div>
</div>