 
<!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu"%>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Visualizaci√≥n de Solicitudes</h1>

        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong><%=@request.subject%></strong>
                    </div>
                    <div class="panel-body">
                        <div class="col-md-8 col-md-offset-2">
                            <div class="modal-header">
                                <h2><%=@request.subject%></h2>
                            </div>
                            <div class="modal-body">
                                <%=simple_format @request.request%>
                            </div>
                            <div class="modal-footer">
                                <%=form_for(@request, :url => {:controller => "requests", :action => "update"}) do |f|%>
                                    <%=f.hidden_field :id%>
                                    <div class="col-md-4">
                                        <%=f.select :receiverid, options_for_select(@receivers.collect{|u| [u.firstname+" "+u.lastname, u.id]}, @request.receiverid), {:include_blank => true}, {:class => "form-control"}%>
                                    </div>
                                    <div class="col-md-4">
                                        <%=f.select :statusid, options_for_select(@statuses.collect{|s| [s.description, s.id]}), {}, {:class => "form-control"}%>
                                    </div>
                                    <div class="col-md-3">
                                        <%=f.submit :value => "Modificar Solicitud",:class => "btn btn-default"%>
                                    </div>
                                <%end%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>