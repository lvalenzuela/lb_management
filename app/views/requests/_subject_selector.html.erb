<div id="subject-selector">
	<%if subjects%>
		<%=select_tag :tagid, options_for_select(options_for_select(subjects.collect{|s| [s.tagname, s.id]})), {:class => "form-control", :include_blank => true}%>
	<%else%>
		<%=select_tag :tagid, options_for_select([nil]), {:class => "form-control", :prompt => "Seleccionar Área"}%>
	<%end%>
</div>