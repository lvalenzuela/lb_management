<!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu", :active_item => ["requests","area_requests"]%>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Administración de Requerimientos: <%=@area.areaname%></h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 form-group">
            <ul class="nav nav-tabs nav-justified" role="tablist">
                <li>
                    <%=link_to "Todos los Requerimientos del Área", :controller => "requests", :action => "area_requests", :params => {:f => "all", :id => @area.id}%>
                </li>
                <li>
                    <%=link_to "Sólo Requerimientos Asignados", :controller => "requests", :action => "area_requests", :params => {:f => "assigned", :id => @area.id}%>
                </li>
                <li>
                    <%=link_to "Sólo Requerimientos Sin Asignar", :controller => "requests", :action => "area_requests", :params => {:f => "unassigned", :id => @area.id}%>
                </li>
                <li class="active">
                    <%=link_to "Administración", :controller => "requests", :action => "manage_area_requests", :params => {:id => @area.id}%>
                </li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Administración de Requerimientos
                </div>
                <div class="panel-body">
                    <div class="col-lg-8 col-lg-offset-2">
                        <h3>Listado de Categorías por Área</h3>
                        <p>Listado correspondiente a las categorías de requerimientos permitidos para realizarse al Área <b><%=@area.areaname%></b></p>
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Categoría</th>
                                    <th>Usuario Predeterminado</th>
                                    <th style="text-align:center;">Editar</th>
                                    <th style="text-align:center;">Eliminar</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%if @tags.blank?%>
                                <tr>
                                    <td colspan="5">No hay categorias configuradas aun</td>
                                </tr>
                                <%else%>
                                    <%@tags.each do |t|%>
                                    <tr>
                                        <td><%=t.id%></td>
                                        <td><%=t.tagname%></td>
                                        <td><%=get_username(t.default_user_id)%></td>
                                        <td style="text-align:center;"><%=link_to "<i class='fa fa-pencil'></i>".html_safe, {:action => "edit_request_tag", :params => {:id => @area.id, :tagid => t.id}}, {:class => "btn btn-circle btn-warning btn-default"}%></td>
                                        <td style="text-align:center;"><%=link_to "<i class='fa fa-times'></i>".html_safe, {action: "destroy_request_tag", :params => {:id => t.id, :area_id => @area.id}}, {method: :delete, data: {confirm: "Estas seguro?"}, :class => "btn btn-circle btn-danger btn-default"}%></td>
                                    </tr>
                                    <%end%>
                                <%end%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Administración de Requerimientos
                </div>
                <div class="panel-body">
                    <%if @default_tag.id.blank?%>
                    <%=form_for @default_tag, :url => {:action => "create_request_tag"} do |f|%>
                        <div class="row">
                            <div class="col-lg-5 col-lg-offset-2">
                                <%=f.hidden_field :area_id, :value => @area.id%>
                                <div class="form-group">
                                    <label>Nueva Categoría</label>
                                    <%=f.text_field :tagname, :class => "form-control"%>
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Usuario Predeterminado</label>
                                    <%=f.select :default_user_id, options_for_select(@receivers.collect{|r| [r.firstname+" "+r.lastname,r.id]}), {:include_blank => true}, {:class => "form-control"} %>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-8 col-lg-offset-2">
                                <div class="pull-right">
                                    <%=f.submit "Crear Título", :class => "btn btn-default"%>
                                </div>
                            </div>
                        </div>
                    <%end%>
                    <%else%>
                        <%=form_for :request_tag, :url => {:action => "update_request_tag"} do |f|%>
                        <%=f.hidden_field :id, :value => @default_tag.id%>
                        <%=f.hidden_field :area_id, :value => @default_tag.area_id%>
                        <div class="row">
                            <div class="col-lg-5 col-lg-offset-2">
                                <div class="form-group">
                                    <label>Editar Título</label>
                                    <%=f.text_field :tagname, :value => @default_tag.tagname ,:class => "form-control"%>
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Usuario Predeterminado</label>
                                    <%=f.select :default_user_id, options_for_select(@receivers.collect{|r| [r.firstname+" "+r.lastname,r.id]}, @default_tag.default_user_id), {:include_blank => true}, {:class => "form-control"} %>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-8 col-lg-offset-2">
                                <div class="pull-right">
                                    <%=f.submit "Editar Título", :class => "btn btn-default"%>
                                </div>
                            </div>
                        </div>
                        <%end%>
                    <%end%>
                </div>
            </div>
        </div>
    </div>
</div>