<!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu", :active_item => ["requests","area_requests"]%>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Administración de Requerimientos: <%=@area.areaname%></h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 form-group">
            <ul class="nav nav-tabs nav-justified" role="tablist">
                <li>
                    <%=link_to "Todos los Requerimientos del Área", :controller => "requests", :action => "area_requests", :params => {:f => "all", :id => @area.id}%>
                </li>
                <li>
                    <%=link_to "Sólo Requerimientos Asignados", :controller => "requests", :action => "area_requests", :params => {:f => "assigned", :id => @area.id}%>
                </li>
                <li>
                    <%=link_to "Sólo Requerimientos Sin Asignar", :controller => "requests", :action => "area_requests", :params => {:f => "unassigned", :id => @area.id}%>
                </li>
                <li class="active">
                    <%=link_to "Administración", :controller => "requests", :action => "manage_area_requests", :params => {:id => @area.id}%>
                </li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Administración de Requerimientos
                </div>
                <div class="panel-body">
                    <div class="col-lg-8 col-lg-offset-2">
                        <h3>Listado de Títulos por Defecto</h3>
                        <p>Listado correspondiente a los títulos de requerimientos permitidos para realizarse al Área <b><%=@area.areaname%></b></p>
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Título</th>
                                    <th style="text-align:center;">Editar</th>
                                    <th style="text-align:center;">Eliminar</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%@titles.each do |t|%>
                                <tr>
                                    <td><%=t.id%></td>
                                    <td><%=t.title%></td>
                                    <td style="text-align:center;"><%=link_to "<i class='fa fa-pencil'></i>".html_safe, {:action => "edit_default_title", :params => {:id => @area.id, :titleid => t.id}}, {:class => "btn btn-circle btn-warning btn-default"}%></td>
                                    <td style="text-align:center;"><%=link_to "<i class='fa fa-times'></i>".html_safe, {action: "destroy_default_title", :params => {:id => t.id, :area_id => @area.id}}, {method: :delete, data: {confirm: "Estas seguro?"}, :class => "btn btn-circle btn-danger btn-default"}%></td>
                                </tr>
                                <%end%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Administración de Requerimientos
                </div>
                <div class="panel-body">
                    <div class="col-lg-8 col-lg-offset-2">
                        <%if @default_title.id.blank?%>
                            <%=form_for @default_title, :url => {:action => "create_default_title"} do |f|%>
                            <%=f.hidden_field :area_id, :value => @area.id%>
                            <div class="form-group">
                                <label>Nuevo Título</label>
                                <%=f.text_field :title, :class => "form-control"%>
                            </div>
                            <div class="pull-right">
                                <%=f.submit "Crear Título", :class => "btn btn-default"%>
                            </div>
                            <%end%>
                        <%else%>
                            <%=form_for :request_default_title, :url => {:action => "update_default_title"} do |f|%>
                            <%=f.hidden_field :id, :value => @default_title.id%>
                            <%=f.hidden_field :area_id, :value => @default_title.area_id%>
                            <div class="form-group">
                                <label>Editar Título</label>
                                <%=f.text_field :title, :value => @default_title.title ,:class => "form-control"%>
                            </div>
                            <div class="pull-right">
                                <%=f.submit "Editar Título", :class => "btn btn-default"%>
                            </div>
                            <%end%>

                        <%end%>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>