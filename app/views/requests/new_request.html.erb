 
 <!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu"%>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Solicitudes</h1>
            
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Formulario de Generacion de Solicitudes
                </div>
                <div class="panel-body">
                    <div class="col-lg-8">
                        <%=form_for(:request, :url => {:controller => "requests", :action => "create_request"}) do |f|%>
                            <div class="form-group">
                                <%=f.hidden_field :userid, :value =>@user.id%>
                                <%=f.hidden_field :status, :value => "1"%>
                            </div>
                            <div class="form-group">
                                <label>Subject:</label>
                                <%=f.text_field :subject, :class => "form-control" %>
                            </div>
                            <div class="form-group">
                                <%=f.select :target_user, options_for_select(@target_users.collect{|u| [u.firstname+" "+u.lastname+" ("+u.username+")",u.id]}), {}, {:class => "form-control"}%>
                            </div>
                            <div class="form-group">
                                <label>Prioridad:</label>
                                <%=f.select :priority, options_for_select([["Urgente",1],["Importante",2],["Regular",3]], 3), {},{:class =>"form-control"}%>
                            </div>
                            <div class="form-group">
                                <label>Solicitud:</label>
                                <%=f.text_area :request, :class => "form-control", size: "60x12"%>
                            </div>
                            <div class="form-group">
                                <%=f.submit :class => "btn btn-default"%>
                            </div>
                        <%end%>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>