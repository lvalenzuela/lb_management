 
 <!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu", :active_item => "requests"%>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Nuevo Requerimiento: <%=@area.areaname%></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Formulario de Generacion de Requerimientos
                </div>
                <div class="panel-body">
                    <%if @request.errors.any?%>
                        <div class="alert alert-warning">
                            <%=pluralize(@request.errors.count,"error")%> no permitieron llevar a cabo la operacion 
                            <ul>
                                <%@request.errors.full_messages.each do |msg|%>
                                    <li><%= msg %></li>
                                <%end%>
                            </ul>
                        </div>
                    <%end%>
                    <div class="col-lg-12">
                        <%=form_for(@request, :url => {:controller => "requests", :action => "create_request"}, :html => { :multipart => true}) do |f|%>
                            <div class="form-group">
                                <%=f.hidden_field :areaid, :value => @area.id%>
                            </div>
                            <div class="row">
                                <div class="col-sm-3 form-group">
                                    <label>Categoría:</label>
                                    <%=f.select :tagid, options_for_select(@area_tags.collect{|t| [t.tagname, t.id]}), {}, {:class => "form-control"}%>
                                </div>
                                <div class="col-sm-9 form-group">
                                    <label>Título:</label>
                                    <%=f.text_field :subject, :class => "form-control" %>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 form-group">
                                    <label>Prioridad:</label>
                                    <%=f.select :priorityid, options_for_select(@priorities.collect{|p| [p.description+" - "+p.term_desc, p.id]}, 3), {},{:class =>"form-control"}%>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Solicitud:</label>
                                <%=f.text_area :request, :id => "redactor1", :class => "redactor", :placeholder => "Especificar Requerimiento ¿Cual es el problema a resolver? ¿Cómo esperas que sea resuelto?"%>
                            </div>
                            <div class="form-group">
                                <label>Adjuntar Archivo:</label>
                                <%=f.file_field :attach %>
                            </div>
                            <div class="form-group pull-right">
                                <%=f.submit :value=> "Enviar Solicitud", :class => "btn btn-default"%>
                            </div>
                        <%end%>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
$('#redactor1').redactor({
    buttons: ['html', 'formatting',  'bold', 'italic', 'deleted', 
'unorderedlist', 'orderedlist', 'outdent', 'indent', 'table', 'link', 'alignment', 'horizontalrule']
});
</script>