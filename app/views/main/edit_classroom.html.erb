<%= render "shared_partials/navigation_menu", :active_item => "admin"%>

<section class="content-header no-margin">
    <h1>
        Salas de Clases
        <small>Editar Sala de clases</small>
    </h1>
    <ol class="breadcrumb">
        <li>Salas de Clases</li>
        <li class="active">Editar Sala de Clases</li>
    </ol>
</section>

<section class="content">
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<%=form_for :classroom, :url => {:action => :update_classroom} do |f|%>
			<%=f.hidden_field :id, :value => @classroom.id%>
			<div class="box">
				<div class="box-header">
					<h3 class="box-title">Editar Sala</h3>
				</div>
				<div class="box-body">
					<div class="form-group">
						<label>Nombre Sala</label>
						<%=f.text_field :name, :value => @classroom.name, :class => "form-control"%>
					</div>
					<div class="form-group">
						<label>Ubicaci√≥n</label>
						<%=f.select :location_id, options_for_select(@locations.collect{|l| [l.name, l.id]}, @classroom.location_id), {}, {:class => "form-control"}%>
					</div>
					<div class="form-group">
						<label>Capacidad</label>
						<%=f.number_field :capacity, :value => @classroom.capacity, :class => "form-control"%>
					</div>
				</div>
				<div class="box-footer clearfix">
					<div class="pull-right">
						<%=f.submit "Editar", :class => "btn btn-primary"%>
					</div>
				</div>
			</div>
			<%end%>
		</div>
	</div>
</section>