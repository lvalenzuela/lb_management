<div class="row">
    <%=form_tag :controller => "main", :action => "modify_assignation" do%>
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Usuarios del √Årea
            </div>
            <div class="panel-body">
                <div class="col-md-8 form-group">
                    <%=select_tag :role, options_for_select(roles.collect{|r| [r.rolename, r.id]}), {:class => "form-control"}%>
                    <%=hidden_field_tag :area, area.id%>
                </div>
                <div class="col-md-4 form-group">
                    <%=submit_tag "Modificar Roles", :class => "btn btn-default btn-block"%>
                </div>
                <table class="table table-striped table-bordered table-hover" id="areausers-table">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Nombre</th>
                            <th>Rol</th>
                            <th style="text-align: center;">Eliminar</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%area_users.each do |u|%>
                            <tr>
                                <td><%=check_box_tag "assign[]", u.assignationid%></td>
                                <td><%=u.firstname+" "+u.lastname%></td>
                                <td><%=get_rolename(u.roleid)%></td>
                                <td style="text-align: center;"><%=link_to "<i class='fa fa-chevron-right'></i><i class='fa fa-chevron-right'></i>".html_safe, {action: "destroy", id: u.assignationid, areaid: area.id}, method: :delete, data: {confirm: "Estas seguro?"}%></td
                            </tr>
                        <%end%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <%end%>
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Usuarios de Longbourn
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover" id="systemusers-table">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Nombre</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%system_users.each do |u|%>
                            <tr>
                                <td style="text-align: center;"><%=link_to "<i class='fa fa-chevron-left'></i><i class='fa fa-chevron-left'></i>".html_safe, {:controller => "main", :action => "assign_to_area", :params => {:area => area.id, :user => u.id}},{:method => :post}%></td>
                                <td><%=u.firstname+" "+u.lastname%></td>
                            </tr>
                        <%end%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
$(document).ready(function() {
    $('#areausers-table').dataTable();
});
</script>

<script>
$(document).ready(function() {
    $('#systemusers-table').dataTable();
});
</script>