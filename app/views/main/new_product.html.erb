<%= render "shared_partials/navigation_menu", :active_item => "admin"%>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Ingreso de Items de Precios</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 form-group">
            <ul class="nav nav-tabs nav-justified" role="tablist">
                <li <%=activate_tab(@active,"new")%>>
                    <%=link_to "Nuevo Producto", {:controller => "main", :action => "new_product"}%>
                </li>
                <li <%=activate_tab(@active,"default")%>>
                    <%=link_to "Ver Productos Habilitados", {:controller => "main", :action => "manage_products"}%>
                </li>
                <li <%=activate_tab(@active,"deleted")%>>
                    <%=link_to "Ver Productos Eliminados", {:controller => "main", :action => "manage_products", :params => {:ctrl => "deleted"}}%>
                </li>
                <li <%=activate_tab(@active,"outdated")%>>
                    <%=link_to "Ver Productos Vencidos", {:controller => "main", :action => "manage_products", :params => {:ctrl => "outdated"}}%>
                </li>
                <li <%=activate_tab(@active,"all")%>>
                    <%=link_to "Ver Todos los Productos", {:controller => "main", :action => "manage_products", :params => {:ctrl => "all"}}%>
                </li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Nuevo Producto
                </div>
                <div class="panel-body">
                    <%=form_for :product_price, :url => {:controller => "main", :action => "create_product"} do |f|%>
                        <div class="form-group">
                            <label>Modalidad</label>
                            <%=f.text_field :modality, :class => "form-control"%>
                        </div>
                        <div class="form-group">
                            <label>Máximo de Alumnos</label>
                            <%=f.select :students_qty, options_for_select((1..20).step(1).collect{|s| ["#{s}",s]}), {},:class => "form-control"%>
                        </div>
                        <div class="form-group">
                            <label>Horas del Curso</label>
                            <%=f.number_field :hours_amt, :value => 96, :class => "form-control", :readonly => true%>
                        </div>
                        <div class="form-group">
                            <label>Precio Total</label>
                            <%=f.number_field :price, :class => "form-control"%>
                        </div>
                        <div class="form-group">
                            <label>Válido Hasta</label>
                            <%=f.date_field :valid_until, :class => "form-control"%>
                        </div>
                        <div class="form-group pull-right">
                            <%=f.submit "Crear Producto", :class => "btn btn-default"%>
                        </div>
                    <%end%>
                </div>
            </div>
        </div>
    </div>
</div>