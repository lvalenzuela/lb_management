<%= render "shared_partials/navigation_menu"%>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Longbourn Management</h1>
        </div>
    </div>
    <%if flash[:notice]%>
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <%=flash[:notice]%>
        </div>
    <%end%>
    <div class="row">
        <%=form_tag :controller => "main", :action => "assign_role" do%>
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Usuarios de Longbourn
                </div>
                <div class="panel-body">
                     <table class="table table-striped table-bordered table-hover" id="users-table">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Nombre</th>
                                <th>Username</th>
                                <th>E-mail</th>
                                <th>Institucion</th>
                            </tr>
                        </thead> 
                        <tbody>
                            <%@users.each do |user|%>
                                <tr>
                                    <td><%=check_box_tag "user[]", user.id%></td>
                                    <td><%=user.firstname+" "+user.lastname%></td>
                                    <td><%=user.username%></td>
                                    <td><%=user.email%></td>
                                    <td><%=user.institution%></td>
                                </tr>
                            <%end%>
                        </tbody>   
                     </table>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Áreas de Longbourn
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <div class="form-group">
                        <%=select_tag :role, options_for_select(@roles.collect{|r| [r.rolename,r.id]}), {:class => "form-control"}%>
                        </div>
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th></th>
                                <th>Nombre Área</th>
                            </tr>
                            </thead>
                            <tbody>
                                <%@areas.each do |area|%>
                                    <tr>
                                        <td><%=radio_button_tag :area ,area.id%></td>
                                        <td><%=link_to area.areaname, :controller => "main", :action => "area_dashboard", :params => {:id => area.id}%></td>
                                    </tr>
                                <%end%>
                            </tbody>
                        </table>
                        <%=submit_tag "Asignar Usuarios", :class => "btn btn-default"%>
                    </div>
                </div>
            </div>
        </div>
        <%end%>
    </div>
</div>

<script>
$(document).ready(function() {
    $('#users-table').dataTable();
});
</script>