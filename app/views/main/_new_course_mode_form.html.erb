<%=form_for :course_mode, :url => {:action => :create_course_mode} do |f|%>
<div class="col-xs-8 col-xs-offset-2">
	<div class="box box-info">
		<div class="box-header">
			<h3 class="box-title">Editar Modalidad de Curso</h3>
		</div>
		<div class="box-body">
			<div class="form-group">
				<label>Modalidad del Curso</label>
				<%=f.text_field :mode_name, :class => "form-control"%>
			</div>
			<div class="form-group">
				<label>Descripcion</label>
				<%=f.text_field :description, :class => "form-control"%>
			</div>
		</div>
		<div class="box-footer clearfix">
			<div class="pull-right">
				<%=f.submit "Crear Modalidad", :class => "btn btn-primary"%>
			</div>
		</div>
	</div>
</div>
<%end%>