<%= render "shared_partials/navigation_menu", :active_item => "admin"%>

<section class="content-header no-margin">
    <h1>
        Tareas para Creación de Cursos
        <small>Visualización</small>
    </h1>
    <ol class="breadcrumb">
        <li>Administración</li>
        <li>Configuración de Creación de Cursos</li>
        <li class="active">Visualizacion</li>
    </ol>
</section>

<section class="content">
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<div class="box box-info">
				<div class="box-header">
					<h3 class="box-title"><%=@request_tag.tagname%></h3>
				</div>
				<div class="box-body">
					<div class="form-group">
						<label>Tarea</label>
						<%=@request_tag.tagname%> - [Nombre del Curso]
					</div>
					<div class="form-group">
						<label>Area de Destino</label>
						<%=get_areaname(@request_tag.area_id)%>
					</div>
					<div class="form-group">
						<label>Mensaje Predeterminado</label>
						<%=simple_format @request_tag.default_msg%>
					</div>
				</div>
				<div class="box-footer">
				</div>
			</div>
		</div>
	</div>
</section>