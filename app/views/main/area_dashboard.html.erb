<%= render "shared_partials/navigation_menu"%>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Panel de √Årea: <%=@area.areaname%></h1>
        </div>
    </div>
    <div class="row">
        <%=form_tag :controller => "main", :action => "modify_assignation" do%>
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Usuarios de Longbourn
                </div>
                <div class="panel-body">
                    <div class="col-md-6 form-group">
                        <%=select_tag :role, options_for_select(@roles.collect{|r| [r.rolename, r.id]}), {:class => "form-control"}%>
                        <%=hidden_field_tag :area, @area.id%>
                    </div>
                    <div class="col-md-6 form-group">
                        <%=submit_tag "Modificar Roles", :class => "btn btn-default"%>
                    </div>
                    <table class="table table-striped table-bordered table-hover" id="users-table">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Nombre</th>
                                <th>Username</th>
                                <th>E-mail</th>
                                <th>Rol</th>
                                <th style="text-align: center;">Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%@users.each do |u|%>
                                <tr>
                                    <td><%=check_box_tag "assign[]", u.assignationid%></td>
                                    <td><%=u.firstname+" "+u.lastname%></td>
                                    <td><%=u.username%></td>
                                    <td><%=u.email%></td>
                                    <td><%=get_rolename(u.roleid)%></td>
                                    <td style="text-align: center;"><%=link_to (image_tag "delete_icon.png", :size => "30x30"), {action: "destroy", id: u.assignationid, areaid: @area.id}, method: :delete, data: {confirm: "Estas seguro?"}%></td
                                </tr>
                            <%end%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <%end%>
    </div>
</div>
<script>
$(document).ready(function() {
    $('#users-table').dataTable();
});
</script>