<%=form_for :course_mode, :url => {:action => :update_course_mode} do |f|%>
<%=f.hidden_field :id, :value => course_mode.id%>
<div class="col-xs-8 col-xs-offset-2">
	<div class="box box-info">
		<div class="box-header">
			<h3 class="box-title">Editar Modalidad de Curso</h3>
		</div>
		<div class="box-body">
			<div class="form-group">
				<label>Modalidad del Curso</label>
				<%=f.text_field :mode_name, :value => course_mode.mode_name, :class => "form-control"%>
			</div>
			<div class="form-group">
				<label>Descripcion</label>
				<%=f.text_field :description, :value => course_mode.description, :class => "form-control"%>
			</div>
			<div class="checkbox">
				<label>
					<%=f.check_box :enabled, :checked => course_mode.enabled ? true : false%>
					Habilitar
				</label>
			</div>
		</div>
		<div class="box-footer clearfix">
			<div class="pull-right">
				<%=f.submit "Editar Modalidad", :class => "btn btn-primary"%>
			</div>
		</div>
	</div>
</div>
<%end%>