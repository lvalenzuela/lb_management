 <!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu"%>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Reportes Historicos</h1>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Listado de Reportes por Curso
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <%=render :partial => "historical_reports_table"%>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Listado de Cursos
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive" id="couses-table">
                            <table class="table table-striped table-bordered table-hover" id="table-course-list">
                                <thead>
                                    <tr>
                                        <th>Curso</th>
                                        <th>Reportes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%@courses.each do |course|%>
                                        <tr>
                                            <td><%=link_to course.coursename, {:controller => "reports", :action =>"reports_for_course", :params => {:id => course.courseid}}, :remote => true%></td>
                                            <td><%=course.reportnum%></td>
                                        </tr>
                                    <%end%>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
$(document).ready(function() {
    $('#table-course-list').dataTable();
});
</script>