 <!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu"%>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Reportes Historicos</h1>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Listado de Reportes por Curso
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive" id="hist-reports-table">
                            <table class="table table-striped table-bordered table-hover" id="table-hist-reports">
                                <thead>
                                    <tr>
                                        <th>Curso</th>
                                        <th>Alumnos</th>
                                        <th>Fecha Reporte</th>
                                        <th>Generar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                       <%@reports.each do |report|%>
                                        <tr>
                                            <td><%=report.coursename%></td>
                                            <td><%=report.alumnos%></td>
                                            <td><%=report.created_at.strftime("%d-%m-%Y")%></td>
                                            <td style="text-align: center"><%=link_to (image_tag "pdf_icon.png", :size => "30x30"), {:controller => "reports", :action => "group_report", :params => {:institution => report.institution, :fullname => report.coursename, :filter => 1, :format => "pdf"}}, :target => "_blank" %></td>
                                        </tr>
                                       <%end%>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
$(document).ready(function() {
    $('#table-hist-reports').dataTable();
});
</script>