
<!-- Barra de navegacion superior -->
<%= render "shared_partials/navbar"%>

<div class="container-fluid">
  <div class="row">
    <!-- Barra de navegacion izquierda -->
    <%= render "shared_partials/sidebar"%>


    <div class="col-sm-8 col-sm-offset-4 col-md-10 col-md-offset-2 main">
      	<div class="row">
	      	<h1 class="page-header">Cursos de Longbourn</h1>
	      	<div class="col-md-4">
		      	<%=form_tag('clients', method: 'get') do%>
			  		<div class="input-group">
				      <%=text_field_tag "institution_name", nil, class: "form-control search-box", placeholder: "Buscar" %>
				      <span class="input-group-btn">
				      	<%=submit_tag "Buscar", class: "btn btn-default"%>
				      </span>
			  		</div>
				<%end%>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-12 col-md-12">
				<table class="table table-striped courses-table">
					<thead>
						<tr>
							<th>Empresa</th>
							<th>N° de Cursos Impartidos</th>
							<th>N° de Alumnos</th>
						</tr>
					</thead>
					<tbody>

					<%@clients.each do |client|%>
						<tr>
							<td><%=link_to client.institution, :controller => 'reports', :action => 'courses', :params => {:course_filter => {:value => "1", :institution => client.institution}}%></td>
							<td><%=client.cursos%></td>
							<td><%=client.alumnos%></td>
						</tr>
					<%end%>
					</tbody>
				</table>
			</div>
		</div>
    </div>
  </div>
</div>

