
<!-- Barra de navegacion superior -->
<%= render "shared_partials/navbar"%>


<div class="container-fluid">
  <div class="row">
    <!-- Barra de navegacion izquierda -->
    <%= render "shared_partials/sidebar"%>


    <div class="col-sm-8 col-sm-offset-4 col-md-10 col-md-offset-2 main">
      <h1 class="page-header">Miembros del Curso: <%=@course.first().fullname%></h1>
      <h2 class="sub-header">Profesores/Administradores</h2>
      <div class="table-responsive">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>ID Usuario</th>
					<th>Nombre</th>
					<th>Rol</th>
				</tr>
			</thead>
			<%@course_members.each do |member|%>
				<%if member.role_shortname != 'student'%>
					<tr>
						<td><%=member.userid%></td>
						<td><%=member.firstname+' '+member.lastname%></td>
						<td><%=member.rol%></td>
					</tr>
				<%end%>
			<%end%>
		</table>
      </div>

      <h2 class="sub-header">Estudiantes</h2>
      <div class="table-responsive">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>ID Usuario</th>
					<th>Nombre</th>
					<th>Rol</th>
					<th>Empresa</th>
					<th>Reporte</th>
				</tr>
			</thead>
			<%@course_members.each do |member|%>
				<%if member.role_shortname == 'student'%>
					<%if user_att_info(member.userid,@course.first().id).clases_dictadas != 0%>
						<tr>
							<td><%=member.userid%></td>
							<td><%=member.firstname+' '+member.lastname%></td>
							<td><%=member.rol%></td>
							<td><%=member.institution%></td>
							<td><%=link_to image_tag('pdf_icon.png', :size => '30x30'), :controller => 'reports', :action => 'generate_report', :params => {:user_id => member.userid, :course_id => @course.first().id, :format => 'pdf'}%></td>
						</tr>
					<%else%>
						<tr>
							<td><%=member.userid%></td>
							<td><%=member.firstname+' '+member.lastname%></td>
							<td><%=member.rol%></td>
							<td><%=member.institution%></td>
							<td>No Disponible</td>
						</tr>
					<%end%>
				<%end%>
			<%end%>
		</table>
      </div>
    </div>
  </div>
</div>

