 
 <!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu"%>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Miembros del <%=@group[:type]%>: <%=@group[:name]%></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-files-o fa-fw"></i> Estudiantes
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
									<th>Nombre</th>
									<th style="text-align: center">Empresa</th>
									<th style="text-align: center">Departamento</th>
									<th>Curso</th>
									<th style="text-align: center">Reporte</th>
                                </tr>
                            </thead>
                            <tbody>
				                <%row_counter = 1%>
								<%@members.each do |member|%>
				                	<%if row_counter%2 == 1%>
				                		<%row_class = "odd"%>
				                	<%else%>
				                		<%row_class = "even"%>
				                	<%end%>
									<tr class="<%=row_class%> gradeA">
										<td><%=member.firstname+" "+member.lastname%></td>
										<td style="text-align: center"><%=member.institution%></td>
										<td style="text-align: center"><%=member.department%></td>
										<td><%=member.course_fullname%></td>
										<td style="text-align: center"><%=link_to (image_tag "pdf_icon.png", :size => "30x30"), :controller => "reports", :action => "user_report", :params => {:user_id => member.userid, :course_id => member.courseid, :format => "pdf"}%></td>
									</tr>
									<%row_counter +=1%>
								<%end%>
                            </tbody>
                        </table>
                    </div>
                    <div class="well">
						<%=link_to 'Descargar Todos', {:controller => "reports", :action => "bulk_user_reports", :params => {:institution => @group[:institution], :fullname => @group[:fullname], :filter => @group[:filter]}}, :class => "btn btn-default btn-lg btn-block", :target => "_blank"%>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
<!-- /#page-wrapper -->

