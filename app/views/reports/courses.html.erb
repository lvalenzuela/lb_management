 
 <!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu"%>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Cursos de Longbourn por Cliente</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-files-o fa-fw"></i> <%=@courses.first().institution%>
                    <div class="pull-right">
                        <div class="btn-group">
                            <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                Acciones
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu pull-right" role="menu">
                                <li><%=link_to "Filtrar por Curso", :controller => "reports", :action => "courses", :params => {:institution => @courses.first().institution, :course_filter => "1"}%>
                                </li>
                                <li><%=link_to "Filtrar por Departamento", :controller => "reports", :action => "courses", :params => {:institution => @courses.first().institution, :course_filter => "2"}%>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
									<th>Nombre</th>
									<th>Cliente</th>
									<th># Alumnos</th>
                                </tr>
                            </thead>
                            <tbody>
			                    <%row_counter = 1%>
								<%@courses.each do |course|%>
				                	<%if row_counter%2 == 1%>
				                		<%row_class = "odd"%>
				                	<%else%>
				                		<%row_class = "even"%>
				                	<%end%>
									<tr class="<%=row_class%> gradeA">
										<td><%=link_to course.fullname, :controller => "reports", :action => "members", :params => {:filter => @selected, :fullname => course.fullname, :institution => course.institution} %></td>
										<td><%=course.institution%></td>
										<td><%=course.alumnos%></td>
									</tr>
									<%row_counter +=1%>
								<%end%>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
<!-- /#page-wrapper -->