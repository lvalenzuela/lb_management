 
 <!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu"%>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Cursos de Longbourn por Cliente</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-files-o fa-fw"></i> <%=@groups.first().institution%>
                    <div class="pull-right">
                        <div class="btn-group">
                            <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                Acciones
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu pull-right" role="menu">
                                <li><%=link_to "Filtrar por Curso", :controller => "reports", :action => "courses", :params => {:institution => @groups.first().institution, :group_filter => "1"}%>
                                </li>
                                <li><%=link_to "Filtrar por Departamento", :controller => "reports", :action => "courses", :params => {:institution => @groups.first().institution, :group_filter => "2"}%>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="courses-table">
                            <thead>
                                <tr>
									<th>Nombre</th>
									<th style="text-align: center">Cliente</th>
									<th style="text-align: center"># Alumnos</th>
                                    <th style="text-align: center">Reporte</th>
                                </tr>
                            </thead>
                            <tbody>
								<%@groups.each do |group|%>
									<tr>
										<td><%=link_to group.fullname, :controller => "reports", :action => "members", :params => {:filter => @selected, :fullname => group.fullname, :institution => group.institution} %></td>
										<td style="text-align: center"><%=group.institution%></td>
										<td style="text-align: center"><%=group.alumnos%></td>
                                        <td style="text-align: center"><%=link_to (image_tag "pdf_icon.png", :size => "30x30"), {:controller => "reports", :action => "group_report", :params => {:institution => group.institution, :fullname => group.fullname, :filter => @selected, :format => "pdf"}}, :target => "_blank"%></td>
									</tr>
								<%end%>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
<!-- /#page-wrapper -->

<script>
$(document).ready(function() {
    $('#courses-table').dataTable();
});
</script>