<!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu", :active_item => "reports"%>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Agrupaciones de Cursos de Longbourn</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Grupos de Cursos
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered" id="groups-table">
                            <thead>
                                <tr>
                                    <th>Nombre grupo</th>
                                    <th style="text-align:center;">Generar Informe</th>
                                    <th style="text-align:center;">Mostrar Cursos</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%@groups.each do |g|%>
                                    <tr>
                                        <td><%=link_to g.groupname, :controller => "reports", :action => "course_groups", :params => {:id => g.id}%></td>
                                        <td style="text-align:center;"><%=link_to (image_tag "pdf_icon.png", :size => "30x30"), {}, :target => "_blank"%></td>
                                        <td style="text-align:center;"><%=link_to "<i class='fa fa-chevron-right'></i><i class='fa fa-chevron-right'></i>".html_safe, {:controller => "reports", :action => "course_groups", :params => {:id => g.id}}%></td>
                                    </tr>
                                <%end%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <%if @courses%>
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Cursos del grupo <%=@selected_group.groupname%>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="clients-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nombre Curso</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%@courses.each do |c|%>
                                    <tr>
                                        <td><%=c.id%></td>
                                        <td><%=c.coursename%></td>
                                    </tr>
                                <%end%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <%end%>
    </div>
</div>