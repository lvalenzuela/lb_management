<!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu", :active_item => "user"%>

<section class="content-header">
    <h1>
        Edición de Observaciones	
       	<small><%=moodle_course_name(@course_obs.course_id)%></small>
    </h1>
    <ol class="breadcrumb">
    	<li>Desempeño por Cursos</li>
        <li class="active"><%=moodle_course_name(@course_obs.course_id)%></li>
    </ol>
</section>

<section class="content">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<%=form_for :course_observation, :url => {:action => :update_teacher_course_observation} do |f|%>
			<div class="box box-info">
				<div class="box-header">
					<h3 class="box-title">Editar Observacion</h3>
				</div>
				<div class="box-body">
    				<div class="row">
    					<div class="col-lg-10 col-lg-offset-1">
    						<div class="form-group">
    							<%=f.hidden_field :id, :value => @course_obs.id%>
    							<%=f.hidden_field :course_id, :value => @course_obs.course_id%>
    							<%=f.hidden_field :user_id, :value => @course_obs.user_id%>
    							<%=f.text_area :message, :value => @course_obs.message, :class => "wysihtml5"%>
    						</div>
    					</div>
    				</div>
				</div>
                <div class="box-footer clearfix">
                    <div class="form-group col-sm-5 col-sm-offset-1">
                        <label>Adjuntar Archivo:</label>
                        <%=f.file_field :attachment, :value => @course_obs.attachment %>
                    </div>
                    <div class="col-sm-3 pull-right">
                        <%=f.submit :value => "Editar Observación", :class => "btn btn-primary btn-lg"%>
                    </div>
                </div>
			</div>
			<%end%>
		</div>
	</div>
</section>

<script type="text/javascript">
    $('.wysihtml5').wysihtml5();
</script>