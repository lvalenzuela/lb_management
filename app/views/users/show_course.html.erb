<!-- Barra de navegacion superior e izquierda -->
<%= render "shared_partials/navigation_menu", :active_item => "user"%>

<section class="content-header">
    <h1>
        Desempeño de Curso
       	<small><%=@course.coursename%></small>
    </h1>
    <ol class="breadcrumb">
    	<li>Mis Cursos</li>
        <li class="active"><%=@course.coursename%></li>
    </ol>
</section>

<section class="content">
	<div class="row">
		<div class="col-xs-7">
			<div class="box box-primary">
				<div class="box-header">
					<h3 class="box-title">Encargados del Curso</h3>
				</div>
				<div class="box-body table-responsive">
					<div class="row">
						<div class="col-xs-10 col-xs-offset-1">
							<table class="table table-striped">
								<thead>
									<tr>
										<th>Nombre</th>
										<th style="width: 150px;">Rol</th>
									</tr>
								</thead>
								<tbody>
									<%@user_roles.each do |u|%>
									<tr>
										<td><%=user_name(u.userid)%></td>
										<td><%=u.rolename%></td>
									</tr>
									<%end%>
								</tbody>
							</table>
						</div>
					</div>
				</div>
				<div class="box-footer">
				</div>
			</div>
		</div>
		<div class="col-xs-5 pull-right">
			<%= render :partial => "dashboard/course_gantt_chart_partial", :locals => {:course => @course, :template_sessions => @template_sessions, :session_content_pages => @session_content_pages}%>
		</div>
		<div class="col-xs-7">
			<%= render :partial => "dashboard/course_details_partial", :locals => {:course => @course, :attendance_reports => @attendance_reports, :course_grade => @course_grade, :page_offset => @page_offset, :institution => @institution}%>
		</div>
		<div class="col-xs-7">
			<%= render "dashboard/course_students_partial", :object => @students_info%>
		</div>
	</div>
	<h4 class="page-header"> Comentarios Sobre el Curso</h4>
    <!-- row -->
    <div class="row" style="margin-top: 20px;">
        <div class="col-md-10 col-md-offset-1">
            <!-- The time line -->
            <ul class="timeline">
                <!-- timeline time label -->
                <li class="time-label">
                    <span class="bg-red">
                        <%=l(@course.start_date, :format => "%d %b. %Y")%>
                    </span>
                </li>
                <%@course_observations.each do |cobs|%>
                <li>
                	<i class="fa fa-comments bg-yellow"></i>
                    <div class="timeline-item">
                        <span class="time"><i class="fa fa-calendar"></i> <%=l(cobs.created_at, :format => "%d/%m/%Y - %H:%M")%></span>
                        <h3 class="timeline-header"><strong><%=get_username(cobs.user_id)%></strong> anotó:</h3>
                        <div class="timeline-body">
                            <%=simple_format cobs.message%>
                        </div>
                        <div class='timeline-footer'>
	        				<%if cobs.attachment.exists?%>
	        					<%=link_to "Ver Adjuntos", cobs.attachment.url, :class =>"btn btn-primary btn-xs",:target => "_blank" %>
	        				<%end%>
	        				<%if cobs.user_id == current_user.id && (Time.now - cobs.created_at)/30.minutes <= 1%>
	        					<%=link_to "Editar Nota", {:controller => :users, :action => :edit_teacher_course_observation, :params => {:id => cobs.id, :courseid => @course.id}}, {:class => "btn btn-danger btn-xs"}%>
	        				<%end%>
                        </div>
                    </div>
                </li>
                <%end%>
                <li class="time-label">
                    <span class="bg-green">
                        <%=l(Time.now, :format => "%d %b. %Y")%>
                    </span>
                </li>
                <li>
                    <i class="fa fa-clock-o"></i>
                </li>
            </ul>
        </div>
    </div>
    <div class="row" style="margin-top: 20px;">
    	<div class="col-xs-10 col-xs-offset-1">
    		<%=form_for :course_observation, :url => {:action => :create_teacher_course_observation} do |f|%>
    		<div class="box box-info">
    			<div class="box-header">
    				<h3 class="box-title">Nueva Observacion</h3>
    			</div>
    			<div class="box-body">
    				<div class="row">
    					<div class="col-lg-10 col-lg-offset-1">
    						<div class="form-group">
    							<%=f.hidden_field :course_id, :value => @course.moodleid%>
    							<%=f.hidden_field :user_id, :value => current_user.id%>
    							<%=f.text_area :message, :class => "wysihtml5"%>
    						</div>
    					</div>
    				</div>
    			</div>
                <div class="box-footer clearfix">
                    <div class="form-group col-sm-5 col-sm-offset-1">
                        <label>Adjuntar Archivo:</label>
                        <%=f.file_field :attachment %>
                    </div>
                    <div class="col-sm-3 pull-right">
                        <%=f.submit :value=> "Anotar Observación", :class => "btn btn-primary btn-lg"%>
                    </div>
                </div>
    		</div>
    		<%end%>
    	</div>
    </div>
</section>
