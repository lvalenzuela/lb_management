<!-- Modal -->
<div class="modal fade" id="avatar-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Cambiar Imagen de Perfil</h4>
            </div>
            <div class="modal-body">
                <%=file_field_tag :avatar%>
            </div>
            <div class="modal-footer">
                <%=button_tag "Cambiar Imagen", :class => "btn btn-default", :onclick => "$('#profile-picture-form').submit()"%>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->