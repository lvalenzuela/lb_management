<!-- COMPOSE MESSAGE MODAL -->
<div class="modal fade" id="avatar-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title"><i class="fa fa-image"></i> Cambiar Imagen de Usuario</h4>
            </div>
                <div class="modal-body">
                    <div class="form-group">
                        <div class="btn btn-success btn-file">
                            <i class="fa fa-paperclip"></i> Adjuntar
                            <%=file_field_tag :avatar%>
                        </div>
                    </div>

                </div>
                <div class="modal-footer clearfix">

                    <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-times"></i> Discard</button>
                    
                    <%=button_tag "<i class='fa fa-envelope'></i> Cambiar Imagen".html_safe, :class => "btn btn-primary pull-left", :onclick => "$('#profile-picture-form').submit()"%>
                </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->